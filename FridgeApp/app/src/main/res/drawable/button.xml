<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

    <shape>
        <solid
            android:color="#8c8c8c" />
        <corners
            android:radius="5dip" />

    </shape>
         </item> <!-- pressed -->
    <item>
    <shape>
        <gradient
            android:startColor="#b0b0b0"
            android:endColor="#9e9e9e"
            android:angle="270" />
        <corners
            android:radius="5dip" />
            </shape>
    </item> <!-- default -->
</selector>