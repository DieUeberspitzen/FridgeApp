<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.michaelh.fridgeapp.ProductActivity"
    android:id="@+id/relativeLayout">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageProduct"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Titel des Produktes"
        android:id="@+id/tbTitel"
        android:layout_alignTop="@+id/imageProduct"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageProduct"
        android:layout_toRightOf="@+id/imageProduct" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Beschreibung"
        android:id="@+id/tbDescr"
        android:layout_below="@+id/tbTitel"
        android:layout_alignRight="@+id/tbTitel"
        android:layout_alignEnd="@+id/tbTitel"
        android:layout_alignLeft="@+id/tbTitel"
        android:layout_alignStart="@+id/tbTitel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ablaufdatum:"
        android:id="@+id/labelExp"
        android:layout_alignTop="@+id/tbExpDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tbExpDate"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/tbDescr"
        android:layout_alignStart="@+id/tbDescr" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tage zum Ablauf:"
        android:id="@+id/labelDaysToGo"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/labelExp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tbdays"
        android:layout_alignTop="@+id/labelDaysToGo"
        android:layout_toRightOf="@+id/imageProduct"
        android:layout_toEndOf="@+id/imageProduct" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Weitere Informationen:"
        android:id="@+id/labelInfo"
        android:layout_below="@+id/labelDaysToGo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tbInfo"
        android:layout_alignBottom="@+id/labelInfo"
        android:layout_alignLeft="@+id/tbdays"
        android:layout_alignStart="@+id/tbdays" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:paddingTop="10dip"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:text="Ã„ndern"
            android:layout_weight="0.5"
            android:background="#b0b0b0"
            android:layout_marginRight="5dip"
            android:id="@+id/edit_button" />

        <Button
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:text="Delete"
            android:layout_weight="0.5"
            android:background="#b0b0b0"
            android:layout_marginLeft="5dip"
            android:id="@+id/delete_button"/>

    </LinearLayout>

</RelativeLayout>
